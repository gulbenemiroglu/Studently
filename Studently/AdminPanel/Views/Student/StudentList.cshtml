
@using EntityLayer
@model List<Student>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- partial -->
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Student List</h6>                         
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                                <thead style="padding:0px !important" ;>
                                <tr>
                                        <th class="text-uppercase text-secondary  text-xs font-weight-bolder opacity-7 ps-2">Student Id</th>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Student Name/Surname</th>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Student Number</th>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Role</th>

                                        <th class=" text-secondary text-xs font-weight-bolder" style="display:flex; justify-content:center">
                                            <a href="/Student/Add" class="btn  btn-success text-white mb-0 align-middle" width="100">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                                </svg>
                                            </a>
                                        </th>
                                </tr>

                            </thead>

                                @{
                                    foreach (var item in Model)
                                    {
                                                    <tbody>
                                                        <tr>
                                                            <td class="align-middle text-center text">
                                                                <p class="text-xs font-weight-bold mb-0">@item.StudentId</p>                                                
                                                            </td>
                                                            <td class ="align-middle text-center text">
                                                                <div class="d-flex py-1">
                                                                    <div>
                                                                        <img src="../assets/img/team-2.jpg" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                                    </div>
                                                                    <div class="d-flex flex-column justify-content-center">
                                                                        <h6 class="mb-0 text">@item.StudentName @item.StudentSurname </h6>
                                                                        <p class="text-xs text-secondary mb-0">@item.StudentMail</p>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            
                                                            <td class="align-middle text-center text">
                                                                    <p class="text-xs font-weight-bold mb-0">@item.StudentNumber</p>
                                                            </td>
                                                            <td class="align-middle text-center text">
                                                                <p class="text-xs font-weight-bold mb-0">@item.UserRole</p>
                                                             </td>
                                                            <td class="align-middle text-center text">
                                                                <a asp-controller="Student" asp-action="StudentDeleteById" asp-route-id="@item.StudentId" class="btn  btn-danger text-white ml-2">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                                                    </svg>
                                                                </a>
                                                            </td>
                                                            <td class="align-middle text-center text">
                                                    <a asp-controller="Student" asp-action="UpdateStudent" asp-route-id="@item.StudentId" class="btn  btn-warning text-white ml-2">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                                </svg>
                                                            </a>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                    } 
                                }


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div></main>