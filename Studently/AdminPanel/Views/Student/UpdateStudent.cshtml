@using EntityLayer
@model EntityLayer.Student


<!-- partial -->
<!-- Nucleo Icons -->


<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- partial -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            Student Update Page
                        </h4>
                        <form asp-action="UpdateStudent" asp-controller="Student" method="post" class="text-start">
                            <div style="display:none" class="mb-3">
                                <label for="studentId" class="form-label">Student Id</label>
                                <input readonly asp-for="StudentId" type="text" class="form-control">
                            </div>
                            <label class="form-label">Student Name</label>
                            <div class="input-group input-group-outline mb-2">
                                <input asp-for="StudentName" type="text" class="form-control">
                            </div>
                            <label class="form-label">Student Surname</label>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" class="form-control" asp-for="StudentSurname">
                            </div>
                            
                            <label  class="form-label">Student Number</label>
                            <div class="input-group input-group-outline mb-3">                                
                                <input type="text" asp-for="StudentNumber" class="form-control">
                            </div>
                          
                            
                            <label class="form-label">Student Mail</label>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" asp-for="StudentMail" class="form-control">
                            </div>
                            <label class="form-label">Student Password</label>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" asp-for="StudentPassword" class="form-control">
                            </div>
                            <label class="form-label">Role</label>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" asp-for="UserRole" class="form-control">
                            </div>
                            <label class="form-label">TeacherId</label>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" asp-for="TeacherId" class="form-control">
                            </div>

                            <label class="form-label">LessonId</label>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" asp-for="LessonId" class="form-control">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">
                                    <a href="/Student/StudentList">UPDATE STUDENT</a>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<!-- main-panel ends -->
