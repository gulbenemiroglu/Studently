@using EntityLayer
@model EntityLayer.Lesson

<!-- partial -->
<!-- Nucleo Icons -->


<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- partial -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            Lesson Update Page
                        </h4>
                        <form asp-action="UpdateLesson" asp-controller="Lesson" method="post" class="text-start">
                            <div style="display:none" class="mb-3">
                                <label for="studentId" class="form-label">Lesson Id</label>
                                <input readonly asp-for="LessonId" type="text" class="form-control">
                            </div>
                            <label class="form-label">Student Name</label>
                            <div class="input-group input-group-outline mb-2">
                                <input asp-for="LessonName" type="text" class="form-control">
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">ADD LESSON</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<!-- main-panel ends -->
